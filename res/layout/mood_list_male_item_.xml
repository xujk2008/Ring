<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/maleMoodTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="1dp"
        android:text="05:23"
        android:textColor="#5b9aa9"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/maleMoodDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/maleMoodTimeText"
        android:paddingBottom="1dp"
        android:text="2013-04-22"
        android:textColor="#5b9aa9"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/maleMoodContentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/maleMoodDateText"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/maleMoodWordText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_weight="1"
            android:text="喝了两碗豆腐脑，一碗甜，一碗咸。"
            android:textColor="#5b9aa9"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/maleMoodFaceImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:src="@drawable/happy_1" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/maleMoodContentLayout"
        android:layout_marginTop="10dp"
        android:background="#5b9aa9" />

</RelativeLayout>